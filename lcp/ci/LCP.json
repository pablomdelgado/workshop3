{
    "kind": "StatefulSet",
    "id": "ci",
    "image": "@liferay.workspace.lcp.jenkins.image@",
    "deploy": false,
    "memory": 8192,
    "cpu": 4,
    "volumes": {
      "ciData": "/var/jenkins_home"
    },
    "loadBalancer": {
      "targetPort": 8080
    },
    "readinessProbe": {
      "httpGet": {
        "path": "/login",
        "port": 8080
      },
      "initialDelaySeconds": 60,
      "timeoutSeconds": 10,
      "failureThreshold": 12
    },
    "livenessProbe": {
      "httpGet": {
        "path": "/login",
        "port": 8080
      },
      "initialDelaySeconds": 300,
      "timeoutSeconds": 10,
      "failureThreshold": 12
    },
    "env": {
      "DXPCLOUD_PROJECT_NAME": "workshop3",

      "JENKINS_URL": "https://ci-workshop3-infra.lfr.cloud",

      "JENKINS_ADMIN_USER_NAME": "workshop3",
      "JENKINS_ADMIN_EMAIL": "workshop3@liferay.com",

      "JENKINS_CUSTOMER_USER_NAME": "customer",
      "JENKINS_CUSTOMER_PASSWORD": "uEO5MvfoSC6T12r1yYRDhJfZsEysgl",

      "JENKINS_EMAIL_NOTIFICATIONS_FROM": "Jenkins CI - workshop3 <workshop3@liferay.com>",

      "LCP_REMOTE": "liferay.cloud",

      "GITHUB_REPOSITORY": "dxpcloud/workshop3"
    },
    "environments": {
      "infra": {
        "deploy": true
      }
    }
  }
